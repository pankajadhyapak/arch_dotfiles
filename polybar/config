[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
foreground_dark = ${xrdb:background}
foreground_disabled = ${xrdb:color0}
urgent = ${xrdb:color9}
focused = ${xrdb:color2}
underline = ${xrdb:color3}

[bar/main]
monitor = ${env:MONITOR:}
top = true
width = 100%
height = 25
background = #aa1E1E2E
foreground = ${colors.foreground}
padding-right = 1
module-margin = 1
font-0 = Hack Nerd Font:pixelsize=11;1
font-1 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;
modules-left = bspwm xwindow
modules-right = wheather pacman-packages wireless-network memory cpu battery date session
separator = %{F#4f4f4f}|%{F-}
spacing = 0
dim-value = 1.0
tray-position = ${env:TRAY_POS:}
tray-detached = false
tray-maxsize = 16
tray-background = ${root.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 4.0
tray-scale = 1.0
enable-ipc = true
wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
label = %title%
format-foreground = ${colors.foreground}

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.focused}
label-focused-foreground= ${colors.foreground_dark}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.urgent}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground_disabled}
label-empty-padding = 1

pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false
fuzzy-match = true


[module/date]
type = internal/date
interval = 1.0
date = %a, %d %b
time = %I:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

label =%date% %time%
label-font = 0
label-foreground = ${colors.foreground}

[module/wireless-network]
type = internal/network
interface = wlp0s20f3
label-connected = %essid%
format-connected = <ramp-signal>
label-connected-foreground = ${colors.foreground}


ramp-signal-foreground = ${colors.foreground}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-5 = 

[module/cpu]
type = internal/cpu
interval = 1
label =  %percentage:2%%
label-foreground = ${colors.foreground}

[module/memory]
type = internal/memory
interval = 1
format = <label>
label =  %percentage_used%%
label-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M
format-charging = <animation-charging>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <ramp-capacity>  <label-full>
label-charging = %percentage:2%%
label-charging-foreground = ${colors.foreground}
label-discharging = %percentage:2%%
label-discharging-foreground = ${colors.foreground}
label-full = %percentage:2%%
label-full-foreground = ${colors.foreground}

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.focused}
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-foreground = ${colors.foreground}
; Framerate in milliseconds
animation-discharging-framerate = 500

[module/session]
type = custom/text
click-left = powermenu
content = 
content-foreground = ${colors.foreground}


[module/pacman-packages]
type = custom/script
exec = sudo pacman -Qu | wc -l
format-prefix = " "
interval = 90
content-foreground = ${colors.foreground}

[module/wheather]
type = custom/script
exec = curl -s https://wttr.in/Berlin?format=%t
format-prefix = "  "
interval = 90
content-foreground = ${colors.foreground}
