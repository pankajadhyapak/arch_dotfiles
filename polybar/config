menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = lock
menu-0-2-exec = menu-open-3

menu-3-0 = cancel
menu-3-0-exec = menu-open-0
menu-3-1 = lock
menu-3-1-exec = betterlockscreen -l blur 


