
# kitty terminal
super + Return
	kitty

# alacritty terminal
super + shift + Return
	alacritty

# program launcher
super + space
    rofi -modi "window#run#ssh" -show drun

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd; dunstify -h string:x-dunst-stack-tag:toggleprogram 'sxhkd' 'Reloaded config'

# Screenshot select
@Print
	screenshot

# Screenshot Window
shift + @Print
	screenshot window

# brightness up
XF86MonBrightnessUp
	changebrightness up

# brightness down
XF86MonBrightnessDown
	changebrightness down

# volume up
XF86AudioRaiseVolume
	changevolume up

# volume down
XF86AudioLowerVolume
	changevolume down

# volume mute
XF86AudioMute
	changevolume mute

# Power Menu
super + p
	powermenu

# Notification history
control + BackSpace
	dunstctl history-pop

# Notification close all
control + q
	dunstctl close-all

# Notification close all
control + comma
	dunstctl context

# Wifi rofi menu
super + n
	wifimenu

# edit config files
super + comma
	confedit

# rofi clipboard
super + shift + @p
	roficlip

# rofi calculator
super + c
	rofi -show calc -modi calc -no-show-match -no-sort > /dev/null

# quit/restart bspwm
super + shift + {e,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# Fullscreen toggle
super + f
	bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled

# tiled mode
super + e
	bspc node focused.floating -t tiled

# floating mode
super + t
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled


# send to the given desktop
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}' --follow


super + 1
	bspc desktop -f '^1'
super + 2
	bspc desktop -f '^2'; \
	[ $(xdotool search --class "Google-chrome" | wc -l) = 0 ] && /opt/google/chrome/google-chrome
super + 3
	bspc desktop -f '^3'; \
	[ $(xdotool search --class "Code" | wc -l) = 0 ] && /usr/bin/code
super + 4
	bspc desktop -f '^4'
super + 5
	bspc desktop -f '^5'; \
	[ $(xdotool search --class "Mysql-workbench-bin" | wc -l) = 0 ] && GTK_THEME=Adwaita mysql-workbench
super + 6
	bspc desktop -f '^6'
super + 7
	bspc desktop -f '^7'; \
	[ $(xdotool search --class "Slack" | wc -l) = 0 ] && slack
super + 8
	bspc desktop -f '^8'; \
	[ $(xdotool search --class "GitHub Desktop" | wc -l) = 0 ] && github-desktop
super + 9
	bspc desktop -f '^9'; \
	[ $(xdotool search --class "Mailspring" | wc -l) = 0 ] && mailspring
super + 0
	bspc desktop -f '^10'

# alternate between tall,wide,even,monocle layout
super + m
	bsp-layout cycle --layouts tall,wide,even,monocle

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window


# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node in the given direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# move the node in the given direction
super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# # focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window


# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# # focus or send to the given desktop
# super + {_,shift + }{1-9,0}
# 	bspc {desktop -f,node -d} '^{1-9,10}'

# #
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
# super + {Left,Down,Up,Right}
# 	bspc node -v {-20 0,0 20,0 -20,20 0}

# Scratchpad orgmode
super + shift + s
	bspwmsp	"st -c orgmode newScratchpad" "orgmode" 25 10 50 70

# Scratchpad terminal
super + shift + a
	bspwmsp  "st -c generalterminal"  "generalterminal" 25 10 50 70

# Scratchpad music
super + shift + d
	bspwmsp  "brave --app=https://music.youtube.com/"  "Brave-browser" 25 10 50 70

# Scratchpad ranger
super + shift + f
	bspwmsp  "st -c scranger ranger"  "scranger" 25 10 50 70

# toggle picom
super + shift + w
	toggleprogram "picom" "--experimental-backends"

super + w; {h,j,k,l}
	tabc add {west,south,north,east} $(bspc query -N -n focused)

super + w; r
	tabbed=$(bspc query-N -n focused); \
	child=$(tabc list $tabbed |  head -n1); \
	tabc remove $child

# Rofi windows
alt + Tab
	rofi -show window run

# reload autorandr
super + apostrophe
	autorandr -l nodocked; dunstify -h string:x-dunst-stack-tag:toggleprogram 'autorandr' 'Reloaded config'

# this menu
super + question
	whichkey

super + r; s
	record start
super + r; x
	record stop
