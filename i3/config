# bindsym $mod+Shift+t exec --no-startup-id st -n="scratchpad-st" -e nvim ~/org/$(date +"%d_%m_%Y").org
exec --no-startup-id st -c "scratchpad-st" -g 120x40 nvim ~/org/$(date +"%d_%m_%Y").org
