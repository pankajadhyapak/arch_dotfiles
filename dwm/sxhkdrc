# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd; dunstify -h string:x-dunst-stack-tag:toggleprogram 'sxhkd' 'Reloaded config'

# kitty terminal
super + Return
	tabbed -n "sttabbed" -r 2 st -w ''

# kitty terminal
alt + Return
	kitty

# st terminal
super + shift + Return
	st

# program launcher
super + space
    rofi -modi "window#run#ssh" -show drun

# Screenshot select
@Print
	screenshot

# Screenshot Window
shift + @Print
	screenshot window

# brightness up
XF86MonBrightnessUp
	changebrightness up

# brightness down
XF86MonBrightnessDown
	changebrightness down

# volume up
XF86AudioRaiseVolume
	changevolume up

# volume down
XF86AudioLowerVolume
	changevolume down

# volume mute
XF86AudioMute
	changevolume mute

# Power Menu
super + @p
	powermenu

# Notification history
control + BackSpace
	dunstctl history-pop

# Notification close all
control + q
	dunstctl close-all

# Notification context in rofi
control + comma
	dunstctl context

# Wifi rofi menu
super + n
	wifimenu

# edit config files
super + comma
	confedit

# open pavucontrol
super + a
  pavucontrol

  # rofi clipboard
super + shift + @p
	roficlip

# gnome calculator
super + @c
	gnome-calculator

# toggle picom
super + shift + w
	toggleprogram "picom" "--experimental-backends"

# Rofi windows
alt + Tab
	rofi -show window run

# autorandr nodocked
super + apostrophe
	autorandr -l nodocked; dunstify -h string:x-dunst-stack-tag:toggleprogram 'autorandr' 'Reloaded config'

# autorandr reload
super + shift + m
	autorandr -c

# this menu
super + question
	whichkey

# start recording
super + r; s
	record

# stop recording
super + r; x
	record kill

# Lock screen
super + shift + Escape
  slock

# Quit Dwm
super + shift + q
	prompt "Do you want to quit?" "dwmc quit"

# kill focus client
super + q
	dwmc killclient

# Toggle the dwm bar
super + b
	dwmc togglebar

# make windows sticky
super + s
	dwmc togglesticky

# Make window fullscreen
super + f
	dwmc togglefullscr

# Make current window floating
super + shift + space
	dwmc togglefloating

# Cycle layouts forward
super + l
	dwmc cyclelayout +1

# Cycle layouts backward
super + shift + l
	dwmc cyclelayout -1

# Switch to tile layout
super + t
	dwmc setlayoutex 0

# Switch to monocle layout
super + m
	dwmc setlayoutex 3

# Show all windows
super + 0
	dwmc viewall

# adjust gaps
super + {equal, minus, plus}
	dwmc setgaps {+1,-1,0}

# move focused window
super + shift + {Left, Right}
	dwmc movestack {+,-}1

# focus windows
super + {Left, Right}
	dwmc focusstack {+,-}1

# Toggle scratchpad 0
super + shift + s
	dwmc togglescratchx 0

# Toggle scratchpad 1
super + shift + f
	dwmc togglescratchx 1

# Toggle scratchpad 2
super + shift + a
	dwmc togglescratchx 2

# Cycle forward/backward through monitor focus
alt + {comma,period}
	dwmc focusmon {-,+}1

# Move current window to previous/next monitor
alt + shift + {comma,period}
	dwmc tagmon {-,+}1

# Increase / decrease window size up down
alt + {Up, Down}
	dwmc setcfact {-,+}0.05

# Increase / decrease window size left right
alt + {Left, Right}
	dwmc setmfact {-,+}0.05

## Move current window to tag {1-9}
alt + shift + {1-9}
	dwmc tagex {0-8}


# view the tag {1-9}
alt + {1-9}
	dwmc viewex {0-8}

super + 1
	dwmviewx 1; \
	[ $(xdotool search --classname "sttabbed" | wc -l) = 0 ] && tabbed -n "sttabbed" -r 2 st -w ''
super + 2
	dwmviewx 2; \
	[ $(xdotool search --class "Google-chrome" | wc -l) = 0 ] && /opt/google/chrome/google-chrome
super + 3
	dwmviewx 3; \
	[ $(xdotool search --class "Code" | wc -l) = 0 ] && /usr/bin/code
super + 4
	dwmviewx 4
super + 5
	dwmviewx 5; \
	[ $(xdotool search --class "Mysql-workbench-bin" | wc -l) = 0 ]  && GTK_THEME=Adwaita mysql-workbench
super + 6
	dwmviewx 6
super + 7
	dwmviewx 7; \
	[ $(xdotool search --classname "slack" | wc -l) = 0 ] && slack
super + 8
	dwmviewx 8; \
	[ $(xdotool search --class "GitHub Desktop" | wc -l) = 0 ] && github-desktop
super + 9
	dwmviewx 9; \
	[ $(xdotool search --class "Mailspring" | wc -l) = 0 ] && mailspring
